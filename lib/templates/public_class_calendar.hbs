<div class="class-calendar-filter">
  <h4>Location:</h4>
  <ul class="filter-link-group"></ul>
</div>
<div class="legend"><span class="check">{{labels.legend.confirmed}}</span></div>
<div class="class-calendar">
  <div class="row header hide-sm">
    <div class="col confirmed"><div class="check"></div></div>
    <div class="col-md date"><span>{{labels.dates}}</span></div>
    <div class="col-md-3 course">{{labels.course}}</div>
    <div class="col-md-2 location">{{labels.location}}</div>
    <div class="col-md-2 time">{{labels.course_length}}</div>
    <!--<div class="col-md duration">{{labels.duration}}</div>-->
    <div class="col-md price">{{labels.price}}</div>
    <!--<div class="col-md lang">{{labels.language}}</div>-->
    <div class="col-md actions">&nbsp;</div>
  </div>
  {{#each classes}}
  <div class="row {{css_classes}} hide-sm desktop-row location-{{location.slug}}">
    <div class="col confirmed">{{#if confirmed}}<div class="check"></div>{{/if}}</div>
    <div class="col-md date"><span class="days">{{{days}}}</span>{{year}}</div>
    <div class="col-md-3 course"><a href="{{course_url}}">{{{course_title}}}</a></div>
    <div class="col-md-2 location">
      <img src="{{../plugin_dir}}lib/img/class_{{# if virtual }}virtual{{else}}onsite{{/if}}.svg" />
      <a class="location-name" data-location="{{location.slug}}"  href="#location-{{ID}}-{{location.id}}">{{location.name}}</a>
      <div class="location-description" id="location-{{ID}}-{{location.id}}">
        {{{location.description}}}
      </div>
    </div>
    <div class="col-md-2 time">{{#if times}}{{times}}<br>{{/if}}{{#if duration}}{{{duration}}}{{/if}}</div>
    <!--<div class="col-md duration">{{{duration}}}</div>-->
    <div class="col-md price{{#if pricing.on_sale}} onsale{{/if}}">
      {{#if pricing.on_sale}}
        <s>{{pricing.formatted.regular_price}}</s>{{pricing.formatted.current_price}}
      {{else}}
        {{pricing.formatted.current_price}}
      {{/if}}
    </div>
    <!--<div class="col-md lang">{{lang}}</div>-->
    <div class="col-md actions" style="text-align: center; display: flex; flex-direction: column; justify-content: center;"><a class="button" href="{{register_url}}">{{../labels.register}}</a></div>
  </div>
  {{/each}}
  {{#each classes}}
  <div class="{{css_classes}} hide-md mobile-row location-{{location.slug}}">
    <div class="course-title"><a href="{{course_url}}">{{course_title}}</a></div>
    <div class="course-dates">{{#if confirmed}}<div class="check"></div>{{/if}} <div>{{{days}}}, {{year}}</div></div>
    <div class="location">
      <img src="{{../plugin_dir}}lib/img/class_{{# if virtual }}virtual{{else}}onsite{{/if}}.svg" />
      <a class="location-name" data-location="{{location.slug}}"  href="#location-{{ID}}-{{location.id}}">{{location.name}}</a>
      <div class="location-description" id="location-{{ID}}-{{location.id}}">
        {{{location.description}}}
      </div>
    </div>
    <div class="">{{times}}</div>
    <div class="">{{{duration}}}</div>
    <div class="price{{#if pricing.on_sale}} onsale{{/if}}">
      {{#if pricing.on_sale}}
        <s>{{pricing.regular_price}}</s>{{pricing.current_price}}
      {{else}}
        {{pricing.current_price}}
      {{/if}}
    </div>
    <div class="lang">{{lang}}</div>
    <div class="actions"><a class="button" href="{{register_url}}">{{../labels.register}}</a></div>
  </div>
  {{/each}}
</div>